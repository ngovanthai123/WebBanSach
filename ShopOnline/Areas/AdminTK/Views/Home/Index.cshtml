@model IEnumerable<ShopOnline.Models.Sach>
@{
    ViewBag.Title = "Trang Quản lý";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="0"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img style="height: 350px " class=" d-block w-100" src="~/Images/thiet_ke_bia_sach.png" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5></h5>
                <p></p>
            </div>
        </div>
        <div class="carousel-item">
            <img style="height: 400px " class="d-block w-100" src="~/Images/Cách-thiết-kế-bìa-sách-ấn-tượng.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img style="height: 400px " class="d-block w-100" src="~/Images/thiet_ke_bia_sach.png" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div class="card mt-3">
    <h5 class="card-header" style="background-color: #f4e0fc">@ViewBag.Title</h5>

    <div class="card-body">
        <div class="card-deck">
            @foreach (var item in Model)
            {
                <div class=" col-xl-3 col-lg-3 col-md-4 col-sm-6 shadow" style="margin-bottom: 40px;">
                    <img src="~/@item.HinhAnhBia" class="card-img-top" alt="...">
                    <div class="card-body text-center " style="min-height: 200px;">
                        <h5 class="card-title">@item.TenSach</h5>
                        <p class="card-text" style="color:red; font-weight:bold">@String.Format("{0:N0}", item.DonGia) VNĐ</p>
                    </div>
                    <div class="card-footer m-auto bg-white" style="text-align:center">
                        <a href="@Url.Action("ThemVaoGio", "GioHang", new { maSP = item.ID })" class="btn btn-danger fas fa-cart-plus"> Giỏ hàng</a>
                        <a href="@Url.Action("ChiTiet", "Home", new { ID = item.ID })" class="btn btn-info fas fa-eye"> Chi tiết</a>
                    </div>
                </div>
            }
        </div>

    </div>
</div>