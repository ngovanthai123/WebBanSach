@model ShopOnline.Models.ChangePasswordTK

@{
    ViewBag.Title = "Đổi mật khẩu";
}

<div class="card mt-3">
    <h5 class="card-header" style="background-color: #f4e0fc">@ViewBag.Title</h5>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            if (Session["MaThuKho"] == null)
            {
                <span>Vui lòng đăng nhập</span>

            }
            else
            {

                <div class="form-group">
                    @Html.LabelFor(model => model.MatKhauCu)
                    @Html.EditorFor(model => model.MatKhauCu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MatKhauCu, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MatKhauMoi)
                    @Html.EditorFor(model => model.MatKhauMoi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MatKhauMoi, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.XacNhanMatKhau)
                    @Html.EditorFor(model => model.XacNhanMatKhau, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.XacNhanMatKhau, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mb-0">
                    <input type="submit" value="Đổi mật khẩu" class="btn btn-success" />
                    <a href=""></a>
                    hoặc @Html.ActionLink("Quay về trang chủ", "Index", "Home")
                </div>
            }

        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}